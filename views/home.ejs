<%- include("partials/header") -%> 

<h1>Home</h1>
<p><%= homecontent %> </p>
<% posts.forEach(function(post){ %>
    <h2><%= post.name %></h2>
    <% if(post.description.length > 100){ %>
        <p><%= post.description.substr(0,100)  %>... <a href="/post/<%= post.name %>">Read more</a> </p> 
    <% }else{ %>
        <p><%= post.description  %></p>
    <% } %>
<% }); %>

